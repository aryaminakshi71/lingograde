# ===========================================
# LINGO GRADE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=LingoGrade
DEBUG=True
ENVIRONMENT=development
NODE_ENV=development

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
# For local development:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/lingograde

# For production (Railway, Heroku, Supabase):
# DATABASE_URL=postgresql://user:password@host:5432/lingograde

DATABASE_URL=postgresql://postgres:password@localhost:5432/lingograde

# Regional database config (for compliance/GDPR)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lingograde
DATABASE_EU_HOST=localhost
DATABASE_EU_PORT=5432
DATABASE_EU_NAME=lingograde_eu
DATABASE_US_HOST=localhost
DATABASE_US_PORT=5432
DATABASE_US_NAME=lingograde_us

# ===========================================
# BETTER AUTH (REQUIRED)
# ===========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=
BETTER_AUTH_URL=http://localhost:3019

# ===========================================
# OAUTH / SOCIAL LOGIN
# ===========================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_TLS=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=LingoGrade

# Email provider: console (dev), sendgrid, resend
EMAIL_PROVIDER=console
NEXT_PUBLIC_MARKETING_EMAIL=marketing@example.com
RESEND_API_KEY=

# ===========================================
# STRIPE PAYMENTS
# ===========================================
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_TEAM_MONTHLY=
STRIPE_PRICE_ENTERPRISE_MONLY=

# ===========================================
# OPENAI (Speech Recognition)
# ===========================================
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ===========================================
# REDIS (Caching & Rate Limiting)
# ===========================================
REDIS_URL=redis://localhost:6379

# Upstash Redis (serverless) - https://upstash.com
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===========================================
# CLOUDFLARE
# ===========================================
# R2 Storage - https://dash.cloudflare.com/r2
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_PUBLIC_URL=

# KV Storage - https://dash.cloudflare.com/kv
CLOUDFLARE_KV_NAMESPACE_ID=
CLOUDFLARE_KV_ACCOUNT_ID=
CLOUDFLARE_KV_AUTH_TOKEN=

# ===========================================
# AWS S3 (Optional - alternative to Cloudflare R2)
# ===========================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# ===========================================
# ANALYTICS
# ===========================================
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# ===========================================
# ERROR TRACKING (Sentry)
# ===========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_DSN=

# ===========================================
# PUBLIC / FRONTEND CONFIG
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ===========================================
# SEO & VERIFICATION
# ===========================================
GOOGLE_SITE_VERIFICATION=
